<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Wolf.Desktop.ViewModels"
             xmlns:dto="using:Wolf.Dtos"
             x:Class="Wolf.Desktop.Views.EmployeesView"
             x:CompileBindings="False">

    <Grid RowDefinitions="Auto,*">

        <!-- ===== TOP BAR ===== -->
        <Border Grid.Row="0"
                Background="{StaticResource BrushSurface}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource BrushBorder}"
                Height="52">
            <Grid ColumnDefinitions="*,Auto" Margin="24,0">
                <TextBlock Text="Служители"
                           FontSize="16" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Border Background="{StaticResource BrushSurfaceAlt}"
                            BorderBrush="{StaticResource BrushBorder}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10,6"
                            Width="260">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#x1F50D;" VerticalAlignment="Center" FontSize="12"/>
                            <TextBox Text="{Binding SearchText}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="0"
                                     Watermark="Търсене на служители..."
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== EMPLOYEE TABLE ===== -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">

            <!-- Header -->
            <Grid Grid.Row="0" ColumnDefinitions="44,*,120,180,80,65"
                  Background="{StaticResource BrushSurfaceAlt}"
                  Height="32">
                <TextBlock Grid.Column="0" Text="#"
                           FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBlock Grid.Column="1" Text="ИМЕ"
                           FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}"
                           VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="2" Text="ТЕЛЕФОН"
                           FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}"
                           VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="3" Text="ИМЕЙЛ"
                           FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}"
                           VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="4" Text="ТИП"
                           FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}"
                           VerticalAlignment="Center" Margin="4,0"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Rectangle Height="1" Fill="{StaticResource BrushBorder}"/>
                    <ListBox ItemsSource="{Binding FilteredEmployees}"
                             SelectedItem="{Binding SelectedEmployee}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="dto:EmployeeDto">
                                <StackPanel>
                                    <!-- Main row -->
                                    <Grid ColumnDefinitions="44,*,120,180,80,65"
                                          MinHeight="36"
                                          Background="Transparent">
                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover">
                                                <Setter Property="Background" Value="{StaticResource BrushSurfaceAlt}"/>
                                            </Style>
                                        </Grid.Styles>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Employeeid}"
                                                   FontFamily="IBM Plex Mono, Consolas"
                                                   Foreground="{StaticResource BrushTextMuted}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"/>
                                        <TextBlock Grid.Column="1"
                                                   FontWeight="SemiBold"
                                                   FontSize="12.5"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0"
                                                   TextTrimming="CharacterEllipsis">
                                            <Run Text="{Binding Firstname}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Secondname}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Lastname}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Phone}"
                                                   Foreground="{StaticResource BrushTextSecondary}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding Email}"
                                                   Foreground="#3b6fa0"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Margin="4,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <!-- Outsider/Staff badge -->
                                        <Panel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border CornerRadius="12" Padding="8,2"
                                                    IsVisible="{Binding Outsider}"
                                                    Background="#fdf6e3">
                                                <TextBlock Text="Външен" FontSize="10" FontWeight="SemiBold" Foreground="#b8860b"/>
                                            </Border>
                                            <Border CornerRadius="12" Padding="8,2"
                                                    IsVisible="{Binding !Outsider}"
                                                    Background="#edf5ee">
                                                <TextBlock Text="Щатен" FontSize="10" FontWeight="SemiBold" Foreground="#3a7d44"/>
                                            </Border>
                                        </Panel>
                                        <!-- Stats button (admin only) -->
                                        <Button Grid.Column="5"
                                                Classes="icon sm"
                                                Command="{Binding $parent[UserControl].DataContext.ViewStatsCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Преглед статистика"
                                                IsVisible="{Binding $parent[UserControl].DataContext.IsAdmin}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="&#x1F4CA;" FontSize="13"/>
                                        </Button>
                                    </Grid>

                                    <!-- Expand content when selected -->
                                    <Border IsVisible="{Binding $parent[ListBoxItem].IsSelected}"
                                            Background="{StaticResource BrushSurfaceAlt}"
                                            BorderThickness="3,0,0,0"
                                            BorderBrush="{StaticResource BrushAccent}"
                                            Padding="20,12,20,16">
                                        <StackPanel Spacing="14">
                                            <WrapPanel Orientation="Horizontal">
                                                <StackPanel Margin="0,0,24,8" Width="100">
                                                    <TextBlock Text="ИД СЛУЖИТЕЛ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Employeeid, StringFormat='#{0}'}"
                                                               FontFamily="IBM Plex Mono, Consolas" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140">
                                                    <TextBlock Text="ИМЕ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Firstname}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140"
                                                            IsVisible="{Binding Secondname, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                    <TextBlock Text="ПРЕЗИМЕ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Secondname}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140">
                                                    <TextBlock Text="ФАМИЛИЯ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Lastname}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140"
                                                            IsVisible="{Binding Phone, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                    <TextBlock Text="ТЕЛЕФОН" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Phone}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="200"
                                                            IsVisible="{Binding Email, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                    <TextBlock Text="ИМЕЙЛ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Email}" FontSize="12.5" Foreground="#3b6fa0"/>
                                                </StackPanel>
                                            </WrapPanel>

                                            <StackPanel Orientation="Horizontal" Spacing="8"
                                                        IsVisible="{Binding $parent[UserControl].DataContext.IsAdmin}">
                                                <Button Classes="sm primary"
                                                        Command="{Binding $parent[UserControl].DataContext.ViewStatsCommand}"
                                                        CommandParameter="{Binding}">
                                                    &#x1F4CA; Преглед статистика
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <Rectangle Height="1" Fill="{StaticResource BrushBorder}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
