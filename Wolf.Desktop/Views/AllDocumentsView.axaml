<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Wolf.Desktop.ViewModels"
             xmlns:dto="using:Wolf.Dtos"
             x:Class="Wolf.Desktop.Views.AllDocumentsView"
             x:CompileBindings="False">

    <Grid RowDefinitions="Auto,*">

        <!-- ===== TOP BAR ===== -->
        <Border Grid.Row="0"
                Background="{StaticResource BrushSurface}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource BrushBorder}"
                Height="52">
            <Grid ColumnDefinitions="*,Auto" Margin="24,0">
                <TextBlock Text="Документи"
                           FontSize="16" FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Border Background="{StaticResource BrushSurfaceAlt}"
                            BorderBrush="{StaticResource BrushBorder}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10,6"
                            Width="260">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#x1F50D;" VerticalAlignment="Center" FontSize="12"/>
                            <TextBox Text="{Binding SearchText}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="0"
                                     Watermark="Търсене на документи..."
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Button Classes="primary sm"
                            Command="{Binding NewDocumentCommand}">
                        + Нов документ
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== DOCUMENT TABLE ===== -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <Grid Grid.Row="0" ColumnDefinitions="44,120,90,140,90,100,65"
                  Background="{StaticResource BrushSurfaceAlt}" Height="32">
                <TextBlock Grid.Column="0" Text="#" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBlock Grid.Column="1" Text="ТИП" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="2" Text="НОМЕР" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="3" Text="ИЗДАТЕЛ" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="4" Text="ДАТА" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="4,0"/>
                <TextBlock Grid.Column="5" Text="СОБСТВЕНОСТ" FontSize="10" FontWeight="Bold"
                           Foreground="{StaticResource BrushTextMuted}" VerticalAlignment="Center" Margin="4,0"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Rectangle Height="1" Fill="{StaticResource BrushBorder}"/>
                    <ListBox ItemsSource="{Binding FilteredDocuments}"
                             SelectedItem="{Binding SelectedDocument}"
                             Background="Transparent" BorderThickness="0" Padding="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="dto:DocumentsofownershipDto">
                                <StackPanel>
                                    <Grid ColumnDefinitions="44,120,90,140,90,100,65"
                                          MinHeight="36" Background="Transparent">
                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover">
                                                <Setter Property="Background" Value="{StaticResource BrushSurfaceAlt}"/>
                                            </Style>
                                        </Grid.Styles>
                                        <TextBlock Grid.Column="0" Text="{Binding Documentid}"
                                                   FontFamily="IBM Plex Mono, Consolas"
                                                   Foreground="{StaticResource BrushTextMuted}"
                                                   FontSize="12" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Typeofdocument}"
                                                   FontWeight="SemiBold" FontSize="12.5"
                                                   VerticalAlignment="Center" Margin="4,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Numberofdocument}"
                                                   FontFamily="IBM Plex Mono, Consolas"
                                                   FontSize="12" VerticalAlignment="Center" Margin="4,0"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Issuer}"
                                                   Foreground="{StaticResource BrushTextSecondary}"
                                                   FontSize="12" VerticalAlignment="Center" Margin="4,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="4" Text="{Binding Dateofissuing, StringFormat='{}{0:dd.MM.yyyy}'}"
                                                   FontSize="12" VerticalAlignment="Center" Margin="4,0"/>
                                        <TextBlock Grid.Column="5" Text="{Binding Typeofownership}"
                                                   Foreground="{StaticResource BrushTextSecondary}"
                                                   FontSize="12" VerticalAlignment="Center" Margin="4,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="2"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Button Classes="icon sm" ToolTip.Tip="Редактиране"
                                                    Command="{Binding $parent[UserControl].DataContext.EditDocumentCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="&#x270F;&#xFE0F;" FontSize="13"/>
                                            </Button>
                                            <Button Classes="icon sm" ToolTip.Tip="Изтриване"
                                                    Command="{Binding $parent[UserControl].DataContext.DeleteDocumentCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="&#x1F5D1;&#xFE0F;" FontSize="13"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Expanded detail -->
                                    <Border IsVisible="{Binding $parent[ListBoxItem].IsSelected}"
                                            Background="{StaticResource BrushSurfaceAlt}"
                                            BorderThickness="3,0,0,0"
                                            BorderBrush="{StaticResource BrushAccent}"
                                            Padding="20,12,20,16">
                                        <StackPanel Spacing="14">
                                            <Button Classes="icon sm" HorizontalAlignment="Right" Margin="0,-4,0,0"
                                                    ToolTip.Tip="Свиване"
                                                    Command="{Binding $parent[UserControl].DataContext.DeselectDocumentCommand}">
                                                <TextBlock Text="&#x25B2;" FontSize="11" Foreground="{StaticResource BrushTextMuted}"/>
                                            </Button>
                                            <WrapPanel Orientation="Horizontal">
                                                <StackPanel Margin="0,0,24,8" Width="100">
                                                    <TextBlock Text="ИД ДОК" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Documentid, StringFormat='#{0}'}"
                                                               FontFamily="IBM Plex Mono, Consolas" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140">
                                                    <TextBlock Text="ТИП" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Typeofdocument}" FontSize="12.5" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="120">
                                                    <TextBlock Text="НОМЕР" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Numberofdocument}" FontSize="12.5"
                                                               FontFamily="IBM Plex Mono, Consolas"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="160">
                                                    <TextBlock Text="ИЗДАТЕЛ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Issuer}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="140">
                                                    <TextBlock Text="ВИД СОБСТВЕНОСТ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Typeofownership}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="80">
                                                    <TextBlock Text="ТОМ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Tom}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="100">
                                                    <TextBlock Text="РЕГИСТЪР" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Register}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="100">
                                                    <TextBlock Text="ДЕЛО" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Doccase}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="110">
                                                    <TextBlock Text="ДАТА НА ИЗДАВАНЕ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Dateofissuing, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="12.5"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,24,8" Width="110">
                                                    <TextBlock Text="ДАТА НА ВПИСВАНЕ" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource BrushTextMuted}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Dateofregistering, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="12.5"/>
                                                </StackPanel>
                                            </WrapPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Button Classes="sm"
                                                        Command="{Binding $parent[UserControl].DataContext.EditDocumentCommand}"
                                                        CommandParameter="{Binding}">
                                                    &#x270F;&#xFE0F; Редактиране на документ
                                                </Button>
                                                <Button Classes="sm danger"
                                                        Command="{Binding $parent[UserControl].DataContext.DeleteDocumentCommand}"
                                                        CommandParameter="{Binding}">
                                                    &#x1F5D1;&#xFE0F; Изтриване
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Rectangle Height="1" Fill="{StaticResource BrushBorder}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
